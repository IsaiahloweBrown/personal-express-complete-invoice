        <!-- <a href="/logout" class="btn btn-default btn-sm text-center">Logout</a>
    </div> -->
    <!-- <div class="grid grid-cols-3 divide-x">
      <div>01</div>
      <div>02</div>
      <div>03</div>
    </div> -->
    <div class="grid grid-cols-3 divide-x">
      <div class="first-grid ">
        <div>
          <div> 
            
            <h1 class="index-header text-6xl text-white gap-y-90">Invoice ASAP</h1>
        </div>
        <div>
         
        </div>
        <h2 class="text-center text-2xl ">Add a invoice</h2>
          <section class="flex justify-center ">

     
        
        

           

              <section class="card ">
                <form action="/invoices" method="POST">
                  <label for="name">Company Name:</label>
                  <input type="text" class="form-control" placeholder="name" name="company">
                  <label for="name">Client Name:</label>
                  <input type="text" class="form-control" placeholder="message" name="client">
                  <label for="name">Due Date:</label>
                  <input type="date" class="form-control" placeholder="name" name="dueDate">
                  <label for="number" >Balance Owed:</label>
                  <input type="text" class="form-control" placeholder="message" name="balance">
                  <button type="submit" class="btn btn-primary text-center ">Submit</button>
                </form>
              </section>
            </section>

        </div>
       
      </div>

      <div class="second-grid">
        <section class="addedToCart text-center">
          <h2>Paid invoices</h2>
          <ul class="invoices">
            <% for(var i=0; i<invoices.length; i++) {%>
              <% if(invoices[i].hasBeenPaid === true) {%>
                <li class="invoice-paid">
                  <span class="company"><%= invoices[i].company %></span>
                  <span class=""><%= invoices[i].client %></span>
                  <span class=""><%= invoices[i].dueDate %></span>
                  <span class=""><%= invoices[i].balance %></span>
                  <span class=""><i id="green" class="fa fa-check" aria-hidden="true" name="green"></i></span>
                  <span><i name="done" class="material-symbols-outlined" aria-hidden="true">done</i></span>
                  <span><i name="close" class="material-symbols-outlined" aria-hidden="true">close</i></span>
                 
                </li>
              <% } %>
            
            <% } %>
          </ul>
        </section>
       
      </div>
      <div class="third-grid">
        <section class="addedToCart text-center">
          <h2>Unpaid invoices</h2>
          <ul class="invoices">
              <% for(var i=0; i<invoices.length; i++) {%>
                <% if(invoices[i].hasBeenPaid === false) {%>
                  <li class="invoice">
                    <span class="company"><%= invoices[i].company %></span>
                    <span class=""><%= invoices[i].client %></span>
                    <span class=""><%= invoices[i].dueDate %></span>
                    <span class=""><%= invoices[i].balance %></span>
                    <span><i name="done" class="material-symbols-outlined" aria-hidden="true">done</i></span>
                    <span><i name="close" class="material-symbols-outlined" aria-hidden="true">close</i></span>
                   
                  </li>
                <% } %>
              
              <% } %>
           </ul>
        </section>

      </div>

       
      

</div>

<script src="main.js"></script>
<script src="https://cdn.tailwindcss.com"></script>
</body>
</html>




